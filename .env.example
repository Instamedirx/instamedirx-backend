PORT=3000

# Database configuration
DB_NAME="your_database_name"
DB_USERNAME="your_database_username"
DB_PASSWORD="your_database_password"

# Google OAuth credentials
GOOGLE_CLIENT_ID=  # Add your Google OAuth client ID here
GOOGLE_CLIENT_SECRET=  # Add your Google OAuth client secret here

# Application URLs
MOBILE_SCHEME=http://localhost:3000/api  # Mobile app base API URL (used for deep linking)
FRONTEND_URL=http://localhost:3000  # Frontend app base URL (e.g., React app)

# SMTP configuration (email sending)
SMTP_HOST=  # e.g., smtp.gmail.com
SMTP_PORT=  # e.g., 587 for TLS or 465 for SSL
SMTP_USER=  # SMTP username, often an email address
SMTP_PASS=  # SMTP password or app-specific password for services like Gmail